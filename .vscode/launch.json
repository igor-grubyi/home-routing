{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Firefox against localhost, with sourcemaps",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:4201/",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}",
            "runtimeExecutable": "C:/Program Files (x86)/Mozilla Firefox/firefox.exe",
            "runtimeArgs": [
                "--incognito"
            ]
        },
        {
            "name": "Attach to Firefox, with sourcemaps",
            "type": "firefox",
            "request": "attach",
            "port": 4201,
            "sourceMaps": true,
            /*"diagnosticLogging": true,*/
            "webRoot": "${workspaceRoot}",
            "url": "http://localhost:4201/*"
        }
    ]
}